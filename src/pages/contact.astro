---
import Layout from '../layouts/Layout.astro';
---

<Layout title="联系我们">
  <section class="py-20 pt-32 bg-light dark:bg-dark">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl font-bold text-center mb-12">联系我们</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
        <!-- 联系方式 -->
        <div class="bg-white dark:bg-secondary p-8 rounded-lg shadow-lg">
          <h2 class="text-2xl font-bold mb-6">联系方式</h2>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="bg-accent text-white p-2 rounded-lg mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold">地址</h3>
                <p class="text-gray-600 dark:text-gray-300">西安市高新区科技路</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-accent text-white p-2 rounded-lg mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold">电话</h3>
                <p class="text-gray-600 dark:text-gray-300">029-XXXXXXXX</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-accent text-white p-2 rounded-lg mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold">邮箱</h3>
                <p class="text-gray-600 dark:text-gray-300">info@huasheng.com</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-accent text-white p-2 rounded-lg mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold">网站</h3>
                <p class="text-gray-600 dark:text-gray-300">www.huasheng.com</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- 联系表单 -->
        <div class="bg-white dark:bg-secondary p-8 rounded-lg shadow-lg">
          <h2 class="text-2xl font-bold mb-6">发送消息</h2>
          
          <form class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">姓名</label>
              <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-lg focus:ring-accent focus:border-accent dark:bg-dark dark:border-gray-600" required />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">邮箱</label>
              <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-lg focus:ring-accent focus:border-accent dark:bg-dark dark:border-gray-600" required />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">主题</label>
              <input type="text" id="subject" name="subject" class="w-full px-4 py-2 border rounded-lg focus:ring-accent focus:border-accent dark:bg-dark dark:border-gray-600" required />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">消息</label>
              <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border rounded-lg focus:ring-accent focus:border-accent dark:bg-dark dark:border-gray-600" required></textarea>
            </div>
            
            <button type="submit" class="bg-accent hover:bg-accent/90 text-white px-6 py-2 rounded-lg transition-colors">发送消息</button>
          </form>
        </div>
      </div>
      
      <!-- 地图 -->
      <div class="rounded-lg overflow-hidden shadow-lg">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.835253572242!2d144.95373631531978!3d-37.817209979751735!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d4c2b349649%3A0xb6899234e561db11!2sEnvato!5e0!3m2!1sen!2sus!4v1635215182367!5m2!1sen!2sus" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </section>
</Layout>